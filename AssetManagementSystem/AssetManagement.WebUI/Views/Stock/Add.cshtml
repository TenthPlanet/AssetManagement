@model AssetManagement.WebUI.ViewModel.StockViewModel

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_assetsms.cshtml";
}

<div style="margin-bottom:10%;"></div>
<h3 class="page-header">
    <i class="fa fa-file-text"></i>
    Stock
</h3>

<ol class="breadcrumb">
    <li><i class="fa fa-home"></i><a href="#">Home</a></li>
    <li><i class="fa fa-desktop"></i>Stock</li>
    <li><i class="fa fa-list-alt"></i>Add Stock</li>
</ol>

@using (Html.BeginForm("Add",null,FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h3>Add Stock</h3>
        <hr />
        @Html.ValidationSummary(true)

        @if (@TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (@ViewBag.Message != null)
{
    <div class="alert alert-danger">@ViewBag.Message</div>
}


<div style="margin-bottom:4%;"></div>
        <div class="form-group">
            @Html.LabelFor(model => model.Catergory, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{
            List<SelectListItem> cats = new List<SelectListItem>();

            cats.Add(new SelectListItem { Text = "Laptop", Value = "Laptop" });
            cats.Add(new SelectListItem { Text = "Printer", Value = "Printer" });
            cats.Add(new SelectListItem { Text = "Monitor", Value = "Monitor" });
            cats.Add(new SelectListItem { Text = "PCBox", Value = "PCBox" });
            cats.Add(new SelectListItem { Text = "Keyboard", Value = "Keyboard" });
            cats.Add(new SelectListItem { Text = "Mouse", Value = "Mouse" });
    
                }
                @Html.DropDownListFor(model => model.Catergory, cats, "Select...")
                @Html.ValidationMessageFor(model => model.Catergory)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Model, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Model)
                @Html.ValidationMessageFor(model => model.Model)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Manaufacturer, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Manaufacturer)
                @Html.ValidationMessageFor(model => model.Manaufacturer)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Quantity, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Quantity)
                @Html.ValidationMessageFor(model => model.Quantity)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Upload Invoice", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" id="Invoice" name="upload" />
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
</div>
